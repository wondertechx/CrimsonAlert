<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activities.JoinActivity">



    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginTop="-25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/appbar" />

    <ImageView
        android:id="@+id/joinArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/joinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Join"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joinText"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:text="Share this code to invite people to see your live location."
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_below="@id/imageView8"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joinCode"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_below="@+id/joinText"
        android:text="58102"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textSize="32dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/joinCode"
        android:layout_centerInParent="true"
        android:id="@+id/shareButton"
        android:text="Share"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joinText2"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:text="Enter Code to view live location"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_below="@id/shareButton"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/joinEditext"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/joinText2"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/ColorAccent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/joinEditext"
        android:layout_centerInParent="true"
        android:id="@+id/joinButton"
        android:text="Join"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_1"/>




</RelativeLayout>