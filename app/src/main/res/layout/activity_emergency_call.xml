<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activities.EmergencyCallActivity">


    <ImageView
        android:id="@+id/callLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView14"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addCallBtn"
        android:layout_below="@id/callPhoneTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="ADD"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/callPhoneTv"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text=""
        android:visibility="invisible"
        android:background="@drawable/custom_textview"
        android:layout_below="@id/joinText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginTop="-25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/appbar" />

    <TextView
        android:id="@+id/emergencyCalltv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Emergency Call"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/callArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/joinText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callLogo"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Add Emergency Contact"
        android:textColor="@color/grey"
        android:textSize="18sp" />
</RelativeLayout>